<template>
  <div class="button-toggle">
    <div class="button-group" id="buttonGroup">
      <button class="button-toggle__btn" data-option="draft">
        <span class="button-toggle__icon">üìù</span>
        <span class="button-toggle__label">Draft</span>
      </button>
      <button class="button-toggle__btn" data-option="review">
        <span class="button-toggle__icon">üëÅÔ∏è</span>
        <span class="button-toggle__label">Review</span>
      </button>
      <button class="button-toggle__btn" data-option="published">
        <span class="button-toggle__icon">‚úÖ</span>
        <span class="button-toggle__label">Published</span>
      </button>
      <button class="button-toggle__btn" data-option="archived">
        <span class="button-toggle__icon">üì¶</span>
        <span class="button-toggle__label">Archived</span>
      </button>
    </div>
    <div class="button-toggle__info" id="infoPanel" style="display: none;">
      <p class="button-toggle__description" id="description"></p>
      <div class="button-toggle__badge" id="badge"></div>
    </div>
  </div>
</template>

<script v-once>
const descriptions = {
  draft: 'Work in progress, not published',
  review: 'Pending review from team',
  published: 'Live and visible to all',
  archived: 'Stored for historical reference'
};

let selectedId = 'draft';

function selectOption(optionId) {
  selectedId = optionId;
  
  // Update button states
  const buttons = document.querySelectorAll('.button-toggle__btn');
  buttons.forEach(btn => {
    btn.classList.remove('button-toggle__btn--active');
    if (btn.dataset.option === optionId) {
      btn.classList.add('button-toggle__btn--active');
    }
  });
  
  // Update info panel
  const infoPanel = document.getElementById('infoPanel');
  const description = document.getElementById('description');
  const badge = document.getElementById('badge');
  
  infoPanel.style.display = 'block';
  description.textContent = descriptions[optionId];
  badge.textContent = optionId;
}

// Initialize
document.addEventListener('DOMContentLoaded', function() {
  const buttons = document.querySelectorAll('.button-toggle__btn');
  
  buttons.forEach(btn => {
    btn.addEventListener('click', function() {
      selectOption(this.dataset.option);
    });
  });
  
  // Set initial state
  selectOption('draft');
});
</script>

